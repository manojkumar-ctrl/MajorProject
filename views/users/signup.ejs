<%layout("/layouts/boilerplate.ejs")%>
<div class="row">
    <h1 class="col-6 offset-3">Signup for MyStay</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb3">
            <label for="username" class="form-label">Enter username</label>
            <input name="username" id="username" type="text" class="form-control" required></input>
            <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb3">
            <label for="email" class="form-label">Enter email</label>
            <input name="email" id="email" type="email" class="form-control" required></input>
            <div class="valid-feedback">Looks good!</div>
            </div>


              <div class="mb3">
            <label for="password" class="form-label">Enter password</label>
            <input name="password" id="password" type="password" class="form-control" required></input>
            <div class="valid-feedback">Looks good!</div>
            </div>
            <br>
                <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>


