<%layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit Your Pg</h2>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" enctype="multipart/form-data" >  
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=listing.title %>" type="text" class="form-control" required></input>
            <div class="valid-feedback">Title looks good!</div>
          </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%=listing.description %></textarea>
            <div class="invalid-feedback">Description is not valid</div> 
          </div>
            <!-- preview -->

            <div class="mb-3">
              Original listing image
                <img src="<%=originalImageUrl%>" alt="">
              </div>

           <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[Image]"   type="file" class="form-control"></input>
 
      </div>

       <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[Image]"   type="file" class="form-control"></input>
 
      </div>


       <div class="row">
       <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required min="0.01" step="0.01">
<div class="invalid-feedback">Price must be a positive number</div>

      </div>
       
      <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required></input>
        <div class="invalid-feedback">Enter a Valid Location</div> 

      </div>
    </div>
       
      <div class="mb-3">
        <label for="College" class="form-label">Nearest College</label>
        <input name="listing[Near College]"value="<%=listing.country %>" type="text" class="form-control" required></input>
        <div class="invalid-feedback">Please Enter College name</div> 

      </div>
        <br><br>
        <button class="btn btn-dark edit-btn mt-3">Add the PG</button><br>
        <br>
    </form>
    </div>
</div>
